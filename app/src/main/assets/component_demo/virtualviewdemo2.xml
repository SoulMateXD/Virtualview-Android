<?xml version="1.0" encoding="utf-8"?>


<VHLayout
    flag="flag_exposure|flag_clickable"
    orientation="V"
    layoutWidth="match_parent"
    layoutHeight="wrap_content"
    layoutMarginLeft="20"
    layoutMarginRight="20"
>

    <RatioLayout
        orientation="H"
        layoutWidth="match_parent"
        layoutHeight="200"
    >
        <!--左边布局-->
        <RatioLayout
            orientation="V"
            layoutWidth="match_parent"
            layoutHeight="match_parent"
            layoutRatio="1"
        >

            <!--左上布局-->
            <RatioLayout
                orientation="V"
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                layoutRatio="3"
            >

                <VText
                    layoutMarginTop="15"
                    text="伙拼爆品"
                    textSize="17"
                    textColor="#ff0000"
                    layoutGravity="left"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    textStyle="bold"
                    layoutRatio="1"
                />
                <VText
                    layoutMarginTop="5"
                    text="上万爆品30天低价"
                    textSize="13"
                    textColor="${textGrayColor}"
                    layoutGravity="left"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    layoutRatio="1"
                />
                <VText
                    layoutMarginTop="5"
                    text="款款畅销"
                    textSize="13"
                    textColor="${textColor}"
                    background="#ff0000"
                    layoutGravity="left"
                    gravity="h_center|v_center"
                    layoutWidth="60"
                    layoutHeight="20"
                    layoutRatio="1"
                />

            </RatioLayout>

            <!--左下布局-->
            <FrameLayout
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                layoutRatio="5"
                layoutMarginTop="10"
                layoutMarginRight="10"
                layoutMarginBottom="10"
            >
                <NImage
                    layoutWidth="80"
                    layoutHeight="80"
                    scaleType="fit_xy"
                    src="${imgUrl}"
                    layoutGravity="left|top"
                    layoutMarginTop="10"
                />

                <VText
                    layoutHeight="wrap_content"
                    layoutWidth="wrap_content"
                    textSize="10"
                    textColor="${colorRed}"
                    text="￥59.99"
                    layoutGravity="left|bottom"
                    layoutMarginBottom="3"
                    layoutMarginLeft="20"
                />

                <NImage
                    layoutWidth="80"
                    layoutHeight="80"
                    scaleType="fit_xy"
                    src="${imgUrl}"
                    layoutGravity="right|top"
                    layoutMarginTop="10"
                    layoutMarginRight="5"
                />

                <VText
                    layoutHeight="wrap_content"
                    layoutWidth="wrap_content"
                    textSize="10"
                    textColor="${colorRed}"
                    text="￥29.9"
                    layoutGravity="right|bottom"
                    layoutMarginBottom="3"
                    layoutMarginRight="30"
                />




            </FrameLayout>

        </RatioLayout>

        <NLine
            layoutHeight="match_parent"
            layoutWidth="0.5"
            orientation="V"
            color="#E8E8E8"
        />

        <!--右边布局-->
        <RatioLayout
            orientation="V"
            layoutWidth="match_parent"
            layoutHeight="match_parent"
            layoutRatio="1"
        >


            <!--右上布局-->
            <FrameLayout
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                layoutRatio="1"
            >

                <NImage
                    layoutWidth="80"
                    layoutHeight="80"
                    scaleType="fit_xy"
                    src="${imgUrl}"
                    layoutGravity="right|v_center"
                    layoutMarginRight="5"
                />

                <VText
                    layoutMarginTop="15"
                    text="天天特卖"
                    textSize="17"
                    textColor="${colorYellow}"
                    layoutGravity="left|top"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    textStyle="bold"
                    layoutMarginLeft="10"
                />
                <VText
                    text="特价巨划算"
                    textSize="13"
                    textColor="${textGrayColor}"
                    layoutGravity="left|v_center"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    layoutMarginLeft="10"
                />
                <VText
                    text="39.9封顶"
                    textSize="13"
                    textColor="${textColor}"
                    background="${colorYellow}"
                    layoutGravity="left|bottom"
                    gravity="h_center|v_center"
                    layoutWidth="60"
                    layoutHeight="20"
                    layoutMarginLeft="10"
                    layoutMarginBottom="17"
                />


            </FrameLayout>

            <NLine
                layoutHeight="0.5"
                layoutWidth="match_parent"
                orientation="H"
                color="#E8E8E8"
            />

            <!--右下布局-->
            <FrameLayout
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                layoutRatio="1"
            >

                <NImage
                    layoutWidth="80"
                    layoutHeight="80"
                    scaleType="fit_xy"
                    src="${imgUrl}"
                    layoutGravity="right|v_center"
                    layoutMarginRight="5"
                />

                <VText
                    layoutMarginTop="15"
                    text="疯狂店促"
                    textSize="17"
                    textColor="${colorBlue}"
                    layoutGravity="left|top"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    textStyle="bold"
                    layoutMarginLeft="10"
                />
                <VText
                    text="天天秒杀"
                    textSize="13"
                    textColor="${textGrayColor}"
                    layoutGravity="left|v_center"
                    layoutWidth="match_parent"
                    layoutHeight="wrap_content"
                    layoutMarginLeft="10"
                />
                <VText
                    text="品质好评"
                    textSize="13"
                    textColor="${textColor}"
                    background="${colorBlue}"
                    layoutGravity="left|bottom"
                    gravity="h_center|v_center"
                    layoutWidth="60"
                    layoutHeight="20"
                    layoutMarginLeft="10"
                    layoutMarginBottom="17"
                />


            </FrameLayout>

        </RatioLayout>

    </RatioLayout>

</VHLayout>

